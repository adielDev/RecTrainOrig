    <style name="DialogBackground">
        <item name="android:background">@color/background_black</item>
        <item name="android:padding">30dp</item>

    </style>
    <style name="DialogTitleStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="DialogMessageStyle">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogActionButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="DialogProgressStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/main_orange</item>
        <item name="colorButtonNormal">@color/main_orange</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/main_orange</item>

        <item name="android:background">@color/main_black</item>
    </style>

</resources>
