<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="visualExplantion" format="reference"/>
    <attr name="dialogBackground" format="reference"/>
    <attr name="dialogTitleStyle" format="reference"/>
    <attr name="dialogMessageStyle" format="reference"/>
    <attr name="dialogActionButtonStyle" format="reference"/>
    <attr name="dialogProgressStyle" format="reference"/>

    <style name="MyDialogTheme" parent="Theme.AppCompat">
        <item name="dialogBackground">@style/DialogBackground</item>
        <item name="dialogTitleStyle" >@style/DialogTitleStyle</item>
        <item name="dialogMessageStyle" >@style/DialogMessageStyle</item>
        <item name="dialogActionButtonStyle" >@style/DialogActionButtonStyle</item>
